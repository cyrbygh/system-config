alias ga="git add"
alias gr="git rm -r"
alias gd="git diff"
alias gpl="git pull --no-rebase origin \$(git branch --show-current)"
alias gps="git push origin \$(git branch --show-current)"
alias gst="git status"
alias gm="git checkout main"
alias gmu="_b=\$(git branch --show-current); gm; gpl; git checkout \${_b}"
alias gmub="gmu; gm; git checkout -b"
alias gb="git branch"
alias gbm="git branch -m"
alias gbd="git branch -D"
alias gl="git log"
alias gcm="git commit -m "
alias gca="git commit --amend"
